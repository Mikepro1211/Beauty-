<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    tools:openDrawer="start">

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/servicios"
                 android:layout_width="106dp"
                 android:layout_height="28dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="142dp"
                 android:layout_marginTop="40dp"
                 android:gravity="center_horizontal|top"
                 android:text="Servicios"
                 android:textSize="24dp"
                 android:textColor="@color/beautyappColor" />
             <!-- Permanente -->
             <TextView
                 android:id="@+id/permanente"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="13dp"
                 android:layout_marginTop="90dp"
                 android:gravity="center_horizontal|top"
                 android:text="@string/permanente"
                 android:textColor="@color/black"
                 android:textSize="18dp" />

             <ImageView
                 android:id="@+id/rectangle_5"
                 android:layout_width="364dp"
                 android:layout_height="182dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="26dp"
                 android:layout_marginTop="120dp"
                 android:background="@drawable/permanente2" />
             <!-- Productos -->
             <TextView
                 android:id="@+id/productos"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="13dp"
                 android:layout_marginTop="325dp"
                 android:gravity="center_horizontal|top"
                 android:text="Productos"
                 android:textColor="@color/black"
                 android:textSize="18dp" />
             <ImageView
                 android:id="@+id/producto"
                 android:layout_width="364dp"
                 android:layout_height="182dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="26dp"
                 android:layout_alignParentTop="true"
                 android:layout_marginTop="350dp"
                 android:background="@drawable/producto"
                 />
             <!-- Uñas -->
             <TextView
                 android:id="@+id/unas"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="13dp"
                 android:layout_marginTop="550dp"
                 android:gravity="center_horizontal|top"
                 android:text="Uñas"
                 android:textColor="@color/black"
                 android:textSize="18dp"/>
             <!-- Rectangle 58 -->
             <ImageView
                 android:id="@+id/unasrect"
                 android:layout_width="364dp"
                 android:layout_height="182dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="26dp"
                 android:layout_marginTop="575dp"
                 android:background="@drawable/unas" />
         </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    <include
        layout= "@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--BARRA DE NAVEGACION-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>