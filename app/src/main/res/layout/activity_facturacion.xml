<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Facturacion"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">
            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text="Factura"
                    android:textSize="40dp"
                    android:textColor="@color/beautyappColor">
                </TextView>
                <TextView
                    android:layout_column="2"
                    android:textSize="30dp"
                    android:text="Beauty"
                    android:textColor="@color/beautyappColor"
                    android:layout_marginLeft="50dp"
                    >

                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text="Datos del cliente"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_column="1"
                    android:text="N.Factura"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_column="2"
                    android:text="Datos de la empresa"
                    android:textColor="@color/black"
                    android:layout_gravity="right">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:text=""
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_column="1"
                    android:text=""
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_column="2"
                    android:text="Beauty"
                    android:layout_gravity="right"
                    android:textColor="@color/cardview_dark_background">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="Fecha"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_column="2"
                    android:text="beauty23@gmail.com"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="right">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/columdate"
                    android:layout_column="1"
                    android:text=""
                    android:textColor="@color/black">
                </TextView>
            </TableRow>
            <TableRow
                android:background="@color/beautyappColor"
                >
                <TextView
                    android:layout_column ="0"
                    android:padding="3dip"
                    android:text="Descripcion"
                    android:textColor="@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_column ="1"
                    android:padding="3dip"
                    android:text="Unidades"
                    android:textColor="@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_column ="2"
                    android:text="Precio"
                    android:textColor="@color/white"
                    >
                </TextView>


            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="0"
                    android:padding="3dip"
                    android:text="">

                </TextView>
                <TextView
                    android:layout_column="2"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="">

                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:padding="3dp"
                    android:text="">

                </TextView>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text=""
                    >

                </TextView>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:padding="3dip"
                    android:text="">

                </TextView>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:layout_column="2"
                    android:gravity="left"
                    android:text=""
                    >

                </TextView>


            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090">
            </View>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="3dp"
                    android:text="Sub Total"
                    android:textColor="@color/beautyappColor">

                </TextView>

                <TextView
                    android:id="@+id/TextView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text="">

                </TextView>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TextView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Costo de Envio"
                    android:textColor="@color/beautyappColor"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text=""/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TextView8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Cupon"
                    android:textColor="@color/beautyappColor">
                </TextView>
                <TextView
                    android:id="@+id/TextView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:text="">

                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Total"
                    android:textColor="@color/beautyappColor"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:gravity="right"
                    android:padding="3dip"
                    android:text=""
                    />
            </TableRow>


        </TableLayout>



    </androidx.core.widget.NestedScrollView>
    <include
        layout= "@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--BARRA DE NAVEGACION-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>